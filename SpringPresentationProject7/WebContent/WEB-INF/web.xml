<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>SpringPresentationProject7</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
	<error-code>404</error-code>
	<location>/WEB-INF/common/error404.jsp</location>
	</error-page>
	
 	<filter>
		<filter-name>characterEncoding</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class><!-- 우리가만든 캐릭터인코딩 필터 삭제해도 된다. -->
		<init-param>
			<param-name>encoding</param-name>
			<param-value>EUC-KR</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>roleCheck</filter-name>
		<filter-class>com.rubypaper.web.common.RoleCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>roleCheck</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
<!-- 스프링 프레임워크에서 제공하는 ContextLoaderListener클래스를 등록한다(pre-loading) -->
<context-param>
<param-name>contextConfigLocation</param-name>
<param-value>classpath:business-*.xml</param-value><!-- 그냥두면 application-xml을 참조하니까 그러지말고 비지니스파일을 로딩해서 스프링 컨테이너를 실행해라 -->
</context-param>
<listener>
<listener-class>
org.springframework.web.context.ContextLoaderListener
</listener-class>
</listener>

	<!-- 스프링 프레임워크에서 제공하는 DispatcherServlet 클래스로 변경한다. -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- Local Parameter는 서블릿의 init() 메소드에서 ServletConfig를 통해 추출할 수 있다. -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/config/presentation-layer.xml</param-value>			
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
</web-app>



